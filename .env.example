# ParqueDB Environment Variables
# Copy to .env and fill in values

# =============================================================================
# Storage Configuration
# =============================================================================

# Data directory (defaults to .parquedb/ in project root)
PARQUEDB_DATA_DIR=./data

# Storage backend: memory | fs | r2 | s3
PARQUEDB_STORAGE=fs

# =============================================================================
# AWS S3 (if using S3 storage)
# =============================================================================

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=my-parquedb-bucket

# =============================================================================
# Cloudflare (if using R2 storage or Workers)
# =============================================================================

# R2 bucket name (also configured in wrangler.toml)
R2_BUCKET=my-parquedb-bucket

# Account ID for R2 API access
CLOUDFLARE_ACCOUNT_ID=

# API token with R2 permissions
CLOUDFLARE_API_TOKEN=

# =============================================================================
# Authentication (oauth.do)
# =============================================================================

# OAuth.do API URL (default: https://apis.do)
OAUTH_API_URL=https://apis.do

# OAuth client ID (default: .do platform client)
OAUTH_CLIENT_ID=client_01JQYTRXK9ZPD8JPJTKDCRB656

# AuthKit domain for login redirects
OAUTH_AUTHKIT_DOMAIN=login.oauth.do

# Custom token storage path for CLI (default: ~/.parquedb/tokens.json)
OAUTH_STORAGE_PATH=

# Direct token (bypasses login flow - for CI/CD)
DO_TOKEN=

# Admin token with elevated permissions
DO_ADMIN_TOKEN=

# =============================================================================
# Workers Secrets (set via `wrangler secret put`)
# =============================================================================

# WorkOS API key (from WorkOS dashboard)
# WORKOS_API_KEY=sk_xxx

# Cookie encryption password (32+ characters)
# WORKOS_COOKIE_PASSWORD=

# JWKS URI for token verification
# WORKOS_JWKS_URI=https://api.workos.com/sso/jwks/client_xxx

# =============================================================================
# Development
# =============================================================================

# Environment: development | production | test
NODE_ENV=development

# Enable debug logging
DEBUG=parquedb:*

# ParqueDB-specific debug
PARQUEDB_DEBUG=1

# Studio/admin UI port
STUDIO_PORT=3333
